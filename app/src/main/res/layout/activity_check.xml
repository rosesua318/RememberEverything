<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상세정보"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#26b99d"
        android:layout_marginBottom="30dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/shop"/>
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailshopname"
        android:textColor="#89dbfb"
        android:textSize="30dp"
        android:text="상점이름"/>
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailshopclose"
        android:textColor="#d6e6e6"
        android:textSize="25dp"
        android:text="휴무일"/>
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailshopaddress"
        android:textColor="#d6e6e6"
        android:textSize="20dp"
        android:text="상점주소"/>
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정보"
        android:id="@+id/detailshopinfo"
        android:textColor="#d6e6e6"
        android:textSize="23dp"/>
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#51aaaf"
        android:id="@+id/callBtn"
        android:text="전화걸기"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addBtn"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:backgroundTint="#51aaaf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="단골 가게에 추가하기"/>
        <Button
            android:id="@+id/cancelBtn"
            android:layout_weight="1"
            android:backgroundTint="#51aaaf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="돌아가기"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘 날씨의 추천 음식점"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#26b99d"
        android:layout_marginBottom="30dp"/>
    <ImageView
        android:id="@+id/shimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/dish"/>
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/foodshopname"
        android:textSize="30dp"
        android:textColor="#89dbfb"
        android:text="음식점이름"/>
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopaddress"
        android:textSize="10dp"
        android:textColor="#89dbfb"
        android:text="주소"/>
    <TextView
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopplus"
        android:textSize="20dp"
        android:textColor="#89dbfb"
        android:text="세부설명"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/retryShopBtn"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#51aaaf"
            android:text="추천 다시하기"/>
        <Button
            android:id="@+id/backShopBtn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#51aaaf"
            android:text="돌아가기"/>
    </LinearLayout>
</LinearLayout>